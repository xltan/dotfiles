[user]
	name = Sinon
	email = lidmuse@gmail.com
[init]
	defaultBranch = main
[credential]
	helper = cache
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	required = true
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	clean = git-lfs clean -- %f
; [http]
; 	proxy = socks5://localhost:1080
; [https]
; 	proxy = socks5://localhost:1080
[diff]
	colorMoved = default
[merge]
	conflictstyle = diff3
[gc]
	auto = 1
[core]
	excludesfile = ~/.gitignore
	pager = delta
[color]
	ui = auto
[url "ssh://gitlab@git.garena.com/"]
	insteadOf = https://git.garena.com/
[url "ssh://gitlab@git.garena.com/"]
	insteadOf = https://sec3.git.garena.com/
[commit]
	template = ~/.gitmessage
[push]
	default = current
[pull]
	rebase = false
[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	features = decorations
	side-by-side = true
	line-numbers = true
	syntax-theme = base16-256

[delta "interactive"]
	keep-plus-minus-markers = false

[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
	hunk-header-decoration-style = blue box
	hunk-header-file-style = red
	hunk-header-line-number-style = "#067a00"
	hunk-header-style = file line-number syntax

[alias]
	ci = commit --verbose
	amend = commit --amend
	co = checkout
	sw = switch
	di = diff
	ds = diff --staged
	ds = diff --stat=160,120
	dh1 = diff HEAD~1
	aa = add --all
	ff = merge --ff-only
	noff = merge --no-ff
	pullff = pull --ff-only
	fa = !git fetch --all --prune && git merge
	last = log -1 HEAD
	unstage = reset HEAD --
	sp = stash pop
	s = status
	# Fancy logging.
	#   h = head
	#   hp = head with patch
	#   r = recent commits, only current branch
	#   ra = recent commits, all reachable refs
	#   l = all commits, only current branch
	#   la = all commits, all reachable refs
	#   b = all branches
	#   bs = all branches, sorted by last commit date
	head = !git r -1
	h = !git head
	hp = "!. ~/.githelpers && show_git_head"
	r = !GIT_NO_PAGER=1 git l -20
	ra = !git r --all
	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	br = branch -v
	bs = "!. ~/.githelpers && pretty_git_branch_sorted"
	abbr = config --get-regexp alias
	brd = "!git branch -v | grep \\\\[gone] | cut -d' ' -f3 | xargs git branch -d"
	brfd = "!git branch -v | grep \\\\[gone] | cut -d' ' -f3 | xargs git branch -D"
	disable-hooks = config core.hooksPath /dev/null
	enable-hooks = config --unset core.hooksPath
